<h2>Productos</h2>
<hr>

<div class="row">
  {{#each products}}
  <div class="col-sm">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">$ {{this.price}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
